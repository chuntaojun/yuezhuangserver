<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yueserver.database.dao.PostMapper">
    <resultMap id="PostResult" type="com.yueserver.enity.Post">
        <id column="PostNo" property="postno" jdbcType="INTEGER" />
        <result column="PostTitle" property="posttitle" jdbcType="VARCHAR" />
        <result column="PostMain" property="postmain" jdbcType="VARCHAR" />
        <result column="PostTime" property="posttime" javaType="java.util.Date" />
        <result column="UsrNo" property="usrno" jdbcType="INTEGER" />
        <result column="PostTypeNo" property="posttypeno" jdbcType="INTEGER" />
        <result column="PostLikeNum" property="postlikenum" jdbcType="INTEGER" />
        <result column="PostComNum" property="postcomnum" jdbcType="INTEGER" />
        <result column="PostFavNum" property="postfavnum" jdbcType="INTEGER" />
    </resultMap>

    <select id="queryPostInfo" resultType="com.yueserver.enity.Post">
        SELECT * FROM Post
    </select>

    <select id="queryPostInfo2HotRecommend" resultType="com.yueserver.enity.Post">
        SELECT PostNo, PostTime, PostLikeNum, PostComNum, PostFavNum FROM Post;
    </select>

    <delete id="deleBatchPost">
        DELETE FROM
            Post
        WHERE
        <foreach collection="set" item="item" separator="OR">
            Post.PostNo=#{item}
        </foreach>
    </delete>

</mapper>